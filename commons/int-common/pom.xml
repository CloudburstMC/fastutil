<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>fastutil-common-parent</artifactId>
        <groupId>com.nukkitx.fastutil</groupId>
        <version>8.5.2</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>fastutil-int-common</artifactId>

    <properties>
        <jigsaw.module>fastutil.commons.ints</jigsaw.module>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.nukkitx.fastutil</groupId>
            <artifactId>fastutil-common</artifactId>
            <version>8.5.2</version>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>${maven.multiModuleProjectDirectory}/src</sourceDirectory>
        <testSourceDirectory>${maven.multiModuleProjectDirectory}/test</testSourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>${package}/ints/IntCollection.java</include>
                        <include>${package}/ints/IntCollections.java</include>
                        <include>${package}/ints/AbstractIntCollection.java</include>
                        <include>${package}/ints/AbstractIntIterator.java</include>
                        <include>${package}/ints/IntIterable.java</include>
                        <include>${package}/ints/IntBidirectionalIterable.java</include>
                        <include>${package}/ints/IntHash.java</include>
                        <include>${package}/ints/IntBinaryOperator.java</include>
                        <include>${package}/ints/Int*Pair.java</include>
                    </includes>
                    <testIncludes>
                        <testInclude>*.noop</testInclude>
                    </testIncludes>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>